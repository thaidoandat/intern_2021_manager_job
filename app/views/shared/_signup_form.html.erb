<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="cfield">
    <%= f.text_field :email, placeholder: t(".placeholder.email") %>
  </div>
  <div class="cfield">
    <%= f.password_field :password, placeholder: t(".placeholder.password") %>
  </div>
  <div class="cfield">
    <%= f.password_field :password_confirmation, placeholder: t(".placeholder.password_confirmation") %>
  </div>
  <div>
    <%= f.select :role, role_options %>
  </div>
  <%= f.submit t(".submit_text"), class:"btn btn-primary" %>
  <div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
